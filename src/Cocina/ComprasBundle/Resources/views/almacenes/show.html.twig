{% extends 'backend.html.twig' %}

{% block body %}
    <h1>{{ almacene.nombreAlmacen }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ almacene.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ almacene.nombreAlmacen }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('almacenes_index') }}">Volver a lista</a>
        </li>
        <li>
            <a href="{{ path('almacenes_edit', { 'id': almacene.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    <h2>Productos en este almac√©n</h2>
    
        <aside>
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody>
            		{% for productoInventario in productosInventario %}     
            			<tr>
            				<td><a href="{{ path('productos_show', { 'id': productoInventario.id }) }}">{{ productoInventario.nombreProducto }}</a></td>
            			</tr>
            		{% endfor %}  
            	</tbody>
            </table>
        </aside> 		 
{% endblock %}
